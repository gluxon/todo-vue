{
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "lib": ["DOM", "ES2015"],
    "module": "es2015",
    "moduleResolution": "node",

    // Required by lodash.uniqueid
    "allowSyntheticDefaultImports": true,

    // Required by vue-tsc
    "noEmit": true,
    "allowJs": true,
  },

  "include": [
    "src"
  ]
}
